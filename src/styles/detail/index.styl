.px-detail
  position relative
  width 100vw
  overflow hidden
  &-imgs
    position relative
    display flex
    transition-property transform
    &__container
      position relative
      background black
    &-item
      position relative
      display flex
      flex-shrink 0
      flex-direction column
      width 100%
      height 100%
      overflow hidden auto
      background inherit
      &:before,
      &:after
        content ''
        display block
        flex 1
      img
        display block
        width 100%
        flex-shrink 0
        transition all .3s
    &__pagination
      position absolute
      bottom 20px
      width 100%
      text-align center
      color $primary
      transition all .3s
  &-info
    padding 0 16px
    padding-bottom 100px
    &__author
      display flex
      align-items center
      &-avatar
        position relative
        width 40px
        height 40px
        border-radius 50%
        overflow hidden
        img
          display block
          width 100%
          height 100%
      &-name
        padding-left 10px
  &-related
    padding 0 12px                          