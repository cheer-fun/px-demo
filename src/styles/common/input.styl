.px-input
  position relative
  width 100%
  &__inner
    box-sizing border-box
    width 100%
    height 40px
    padding 12px
    border none
    rg-text()
    font-weight 700
    border-radius 12px
    outline none
  &__subfix--2,
  &__subfix
    position absolute
    m-center-vertical()
    right 0px
    padding 0 12px
    rg-text($primary)
    line-height 40px
    text-align center
    outline none
    i
      display block
      width 20px
  &__subfix--2
    right 40px
    padding-right 8px
