.px-img-flow
  position relative
  display flex
  box-sizing content-box
  justify-content space-between
  width 100%
  min-height 100vh
.px-img-list
  position relative
  display flex
  justify-content space-between
  flex-wrap wrap
  width 100%
  height 10%
.px-preview
  position relative
  width 100%
  height 100%
  border-radius 16px
  overflow hidden
  &__wrapper
    position absolute
    display block
    box-sizing border-box
    top 0
    left 0
    padding 8px
  &__count
    position absolute
    top 8px
    right 8px
    padding 0px 4px
    border-radius 4px
    background-color #0000009e
    rg-text(white)
  img
    width 100%
    height 100%
    opacity 0
    transition opacity .3s